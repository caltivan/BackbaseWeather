<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/bookmark_row_divider_margin"
              android:animationCache="true"
              android:background="@drawable/bookmark_item_selector"
              android:gravity="center"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/bookmarkCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1"
        android:textAlignment="viewStart"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/bookmarkCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <ImageView
        android:id="@+id/removeBookmarkButton"
        android:padding="@dimen/forecast_pointer_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/bookmark_row_margin"
        app:srcCompat="@drawable/remove_button_selector"/>
</LinearLayout>
