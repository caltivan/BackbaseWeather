<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:animationCache="true"
              android:background="@drawable/weather_info_background"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/wind_info_title"
        android:textAlignment="center"
        android:textColor="@color/colorWeatherTitleSection"
        android:textSize="@dimen/forecast_section_title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/weather_info_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/forecast_pointer_padding">

            <TextView
                android:id="@+id/windSpeedTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed_title"
                android:textAlignment="center"
                android:textColor="@color/colorWeatherTitlePoint"
                android:textSize="@dimen/forecast_pointer_title_text_size"/>

            <TextView
                android:id="@+id/windSpeedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorWeatherValuePoint"
                android:textSize="@dimen/forecast_pointer_value_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/weather_info_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/forecast_pointer_padding">

            <TextView
                android:id="@+id/windDegTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_deg_title"
                android:textAlignment="center"
                android:textColor="@color/colorWeatherTitlePoint"
                android:textSize="@dimen/forecast_pointer_title_text_size"/>

            <TextView
                android:id="@+id/windDegTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorWeatherValuePoint"
                android:textSize="@dimen/forecast_pointer_value_text_size"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
